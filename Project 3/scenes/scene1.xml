<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="1" g="1" b="1" a="1" />
    <background r="0.02" g="0.6" b="0.96" a="1" />
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>
	<LIGHT id="ambient">
        <enable value ="1" />
        <position  x="0" y="100" z="0" w="1" />
        <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light0">
        <enable value ="1" />
        <position  x="10" y="20" z="10" w="1" />
        <ambient r="0" g="0" b="0" a="1.0" />
        <diffuse r="0.5" g="0.5" b="0.5" a="0.5" />
        <specular r="0.5" g="0.5" b="0.5" a="0.5" />
    </LIGHT>
</LIGHTS>

<!-- Textures -->
<TEXTURES>
	<TEXTURE id="field">
        <file path="images/field3.jpg" />
        <amplif_factor s="0.3" t="0.3" />
    </TEXTURE>

    <TEXTURE id="mountain">
        <file path="images/mountain.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>
</TEXTURES>


<MATERIALS>
    <!-- A default material -->
    <MATERIAL id="defaultMaterial">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />
        <ambient r="0.4" g="0.4" b="0.4" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <MATERIAL id="fieldMaterial">
        <shininess value="1" />
        <specular r="0.1" g="0.1" b="0.1" a="1" />
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />
        <ambient r="0.5" g="0.5" b="0.5" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <MATERIAL id="mountainMaterial">
        <shininess value="1" />
        <specular r="0.3" g="0.3" b="0.3" a="1" />
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />
        <ambient r="0.5" g="0.5" b="0.5" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>
</MATERIALS>

<!-- The animations -->
<ANIMATIONS>
</ANIMATIONS>

<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>

    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="ground" />
            <NODEREF id="mountain" />
        </DESCENDANTS>
    </NODE>

    <NODE id="ground" selectable="1">
        <MATERIAL id="fieldMaterial" />
        <TEXTURE id="field" />

        <SCALE sx="200" sy="1" sz="200" />
        <TRANSLATION x="-0.5" y="0" z="0.5" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
            <LEAF type="rectangle" args="0 1 1 0" />
        </DESCENDANTS>
    </NODE>

    <NODE id="mountain" selectable="1">
        <MATERIAL id="mountainMaterial" />
        <TEXTURE id="mountain" />

        <TRANSLATION x="10" y="-2" z="0" />
        <SCALE sx="2" sy="1" sz="2" />

        <DESCENDANTS>
            <LEAF type="patch" args="20 20">
                <CPLINE>
					<CPOINT xx="0" yy="0" zz="0" ww="1" />
					<CPOINT xx="5" yy="0" zz="0" ww="1" />
					<CPOINT xx="10" yy="0" zz="0" ww="1" />
				</CPLINE>
				<CPLINE>
					<CPOINT xx="0" yy="0" zz="5" ww="1" />
					<CPOINT xx="5" yy="12" zz="5" ww="5" />
					<CPOINT xx="10" yy="0" zz="5" ww="1" />
				</CPLINE>
                <CPLINE>
					<CPOINT xx="0" yy="0" zz="10" ww="1" />
					<CPOINT xx="5" yy="0" zz="10" ww="1" />
					<CPOINT xx="10" yy="0" zz="10" ww="1" />
				</CPLINE>
			</LEAF>
        </DESCENDANTS>
    </NODE>

    <NODE id="cube">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="faceCube1" />
            <NODEREF id="faceCube2" />
            <NODEREF id="faceCube3" />
            <NODEREF id="faceCube4" />
            <NODEREF id="faceCube5" />
            <NODEREF id="faceCube6" />
        </DESCENDANTS>
    </NODE>

    <NODE id="faceCube1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="0" z="1" />

        <DESCENDANTS>
            <LEAF type="rectangle" args="0 1 1 0" />
        </DESCENDANTS>
    </NODE>

    <NODE id="faceCube2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <ROTATION axis="y" angle="-90" />

        <DESCENDANTS>
            <LEAF type="rectangle" args="0 1 1 0" />
        </DESCENDANTS>
    </NODE>

    <NODE id="faceCube3">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="1" y="0" z="0" />
        <ROTATION axis="y" angle="180" />

        <DESCENDANTS>
            <LEAF type="rectangle" args="0 1 1 0" />
        </DESCENDANTS>
    </NODE>

    <NODE id="faceCube4">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="1" y="0" z="1" />
        <ROTATION axis="y" angle="90" />

        <DESCENDANTS>
            <LEAF type="rectangle" args="0 1 1 0" />
        </DESCENDANTS>
    </NODE>

    <NODE id="faceCube5">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="1" z="1" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
            <LEAF type="rectangle" args="0 1 1 0" />
        </DESCENDANTS>
    </NODE>

    <NODE id="faceCube6">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <ROTATION axis="x" angle="90" />

        <DESCENDANTS>
            <LEAF type="rectangle" args="0 1 1 0" />
        </DESCENDANTS>
    </NODE>
</NODES>

</SCENE>
